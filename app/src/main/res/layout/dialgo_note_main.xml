<?xml version="1.0" encoding="utf-8"?>

<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:padding="10dp"
        >


            <LinearLayout
                android:id="@+id/setting_linear_1"

                style="@style/setting_sub_linear_layout_vertical"
                android:background="@color/grey">

                <TextView
                    android:text="*1.Phone Position(How you hold the phone? This Field is Mandatory!)"
                    style="@style/setting_left_text" />

                <LinearLayout
                    android:id="@+id/setting_linear_layout_phone_orientation"
                    style="@style/setting_sub_linear_layout_horizontal">

                    <TextView
                        android:text="Phone Position"
                        android:id="@+id/setting_right_phone_orientation"
                        style="@style/setting_right_text" />

                    <ImageView style="@style/setting_icon" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_linear_0_b"
                style="@style/setting_sub_linear_layout_vertical">


                <RadioGroup
                    android:id="@+id/radioGroup_phone_orientation"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_below="@+id/text"
                    >

                    <RadioButton
                        android:id="@+id/radio_phone_orientation_1"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="A: Left Hand with screen towards face" />

                    <RadioButton
                        android:id="@+id/radio_phone_orientation_2"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="B: Right Hand with screen towards face" />

                    <RadioButton
                        android:id="@+id/radio_phone_orientation_3"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="C: Left pant pocket with screen towards inside (body)" />

                    <RadioButton
                        android:id="@+id/radio_phone_orientation_4"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="D: Right pant pocket with screen towards inside (body)"
                        android:checked="false" />

                    <RadioButton
                        android:id="@+id/radio_phone_orientation_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="E: Left pant pocket with screen towards outside" />

                    <RadioButton
                        android:id="@+id/radio_phone_orientation_6"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="F: Right pant pocket with screen towards outside" />

                    <RadioButton
                        android:id="@+id/radio_phone_orientation_7"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="O: Others" />
                </RadioGroup>

                <EditText
                    android:id="@+id/editText_phone_position"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:text="" />

                <!-- Error message -->
                <TextView
                    android:id="@+id/textView_errors"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="15dip"
                    android:textColor="@color/red"
                    android:text="" />
                <LinearLayout

                    style="@style/setting_sub_linear_layout_horizontal"
                    android:layout_marginTop="20dip"
                    >

                    <Button
                        android:id="@+id/btn_Cancel"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="5dip"
                        android:background="@color/material_deep_teal_200"
                        android:layout_weight="1"
                        android:text="Cancel" />
                <Button
                    android:id="@+id/btn_OK"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="#3B5998"
                    android:layout_weight="1"

                    android:text="OK" />

                </LinearLayout>

                </LinearLayout>



            <LinearLayout
                android:id="@+id/setting_linear_2"

                style="@style/setting_sub_linear_layout_vertical">

                <TextView
                    android:text="2.Rough Routes(The places you visited at home)"
                    style="@style/setting_left_text" />

                <LinearLayout
                    android:id="@+id/setting_linear_layout_routes"
                    style="@style/setting_sub_linear_layout_horizontal">

                    <TextView
                        android:id="@+id/setting_right_route"
                        style="@style/setting_right_text"
                        android:text="routes" />

                    <ImageView style="@style/setting_icon" />

                </LinearLayout>

            </LinearLayout>


            <LinearLayout
                android:id="@+id/setting_linear_3"

                style="@style/setting_sub_linear_layout_vertical">

                <TextView
                    android:text="3.Weather"
                    style="@style/setting_left_text" />

                <LinearLayout
                    android:id="@+id/setting_linear_weather"
                    style="@style/setting_sub_linear_layout_horizontal">

                    <TextView
                        android:text="weather"
                        android:id="@+id/setting_right_weather"
                        style="@style/setting_right_text" />

                    <ImageView style="@style/setting_icon" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/setting_linear_4"
                style="@style/setting_sub_linear_layout_vertical">

                <TextView
                    android:text="4.Activities with the Phone"
                    style="@style/setting_left_text" />

                <LinearLayout
                    android:id="@+id/setting_linear_activities"
                    style="@style/setting_sub_linear_layout_horizontal">

                    <TextView
                        android:text="activity"
                        android:id="@+id/setting_right_activity"
                        style="@style/setting_right_text" />

                    <ImageView style="@style/setting_icon" />

                </LinearLayout>
            </LinearLayout>


            <LinearLayout
                android:id="@+id/setting_linear_5"

                style="@style/setting_sub_linear_layout_vertical">

                <TextView
                    android:text="5.Make Some Notes"
                    style="@style/setting_left_text" />

                <LinearLayout
                    android:id="@+id/setting_linear_notes"
                    style="@style/setting_sub_linear_layout_horizontal">

                    <TextView
                        android:text="notes"
                        android:id="@+id/setting_right_notes"
                        style="@style/setting_right_text" />

                    <ImageView style="@style/setting_icon" />

                </LinearLayout>
            </LinearLayout>


        </LinearLayout>

    </ScrollView>


</android.support.v4.widget.DrawerLayout>
